{
  "name": "@monotodo/database",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "db:generate": "dotenvx run --env-file ../../.env -- prisma generate",
    "db:migrate": "dotenvx run --env-file ../../.env -- prisma migrate dev",
    "db:seed": "dotenvx run --env-file ../../.env -- prisma db seed",
    "db:reset": "dotenvx run --env-file ../../.env -- prisma migrate reset",
    "db:studio": "dotenvx run --env-file ../../.env -- prisma studio"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.18.0",
    "@prisma/client": "^6.18.0"
  },
  "devDependencies": {
    "@monotodo/typescript-config": "workspace:*",
    "@types/node": "^24.9.1",
    "better-auth": "^1.3.34",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}
