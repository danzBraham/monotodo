{
  "name": "monotodo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel --aggregate-output dev",
    "lint": "pnpm -r --parallel lint",
    "build": "pnpm -r build",
    "start": "pnpm -r --parallel start",
    "check-types": "pnpm -r --parallel check-types",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "db:generate": "pnpm --filter database db:generate",
    "db:migrate": "pnpm --filter database db:migrate",
    "db:seed": "pnpm --filter database db:seed",
    "db:reset": "pnpm --filter database db:reset",
    "db:studio": "pnpm --filter database db:studio"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@dotenvx/dotenvx": "^1.51.0",
    "@monotodo/eslint-config": "workspace:*",
    "@monotodo/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "5.9.3"
  }
}
